{
  "$jason": {
    "head": {
      "title": "This is awesome",
      "styles": {
        "bold": {
          "font": "HelveticaNeue-CondensedBold",
          "padding": "10",
          "size": "15"
        },
        "normal": {
          "font": "HelveticaNeue",
          "size": "12"
        }
      },
    },
    "body": {
      "header": {
        "title": "[Title goes here]",
        "menu": {
          "text": "View JSON",
          "href": {
            "url": "http://www.jasonbase.com/things/qp5/edit",
            "view": "web"
          }
        },
        "style": {
          "font": "AvenirNext-Heavy",
          "size": "18"
        }
      },
      {
        "type": "label",
        "text": "Touch me",
        "action": {
          "type": "$network.request",
          "options": {
            "url": "https://www.jasonclient.org/items.json"
          },
          "success": {
            "type": "$render"
          },
          "error": {
            "type": "$util.banner",
            "options": {
              "title": "Error",
              "description": "Uh oh, something went wrong."
            }
          }
        }
      }
    }
  }
}
